        <Button x:Name="button4" Click="socialstudies" Content="Button" Visibility="Collapsed" HorizontalAlignment="Center"  Margin="56,400,56,0" Width="180" VerticalAlignment="Top" Height="50"/>
        <Button x:Name="button5" Content="computerscience" Visibility="Collapsed" HorizontalAlignment="Center" Margin="56,470,56,0" Width="180" VerticalAlignment="Top" Height="50"/>
